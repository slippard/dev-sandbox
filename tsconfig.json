{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2017",
            "dom"
        ],
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}